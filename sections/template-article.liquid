<article class="py-8">
 {% for block in section.blocks %}
        {% case block.type %}
            {% when 'article_title' %}
                <div class="flex justify-center items-center">
                    <div class="max-w-7xl text-center">
                        <a href="{{ blog.url }}" class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold">{{ blog.title }}</a>
                        <h1 class="text-4xl md:text-6xl font-medium uppercase">{{ article.title }}</h1>
                    </div>
                </div>
            {% when 'article_image' %}
                <div class="max-w-7xl bg-blue-100 rounded-lg mx-2 md:mx-auto overflow-hidden">
                        {% if article.image != blank %}
                            <img class="w-full h-80 md:h-96 object-contain object-center p-5"  src="{{ article.image | image_url: width: 700}}" 
                                 alt="{{ article.image.alt }}" 
                                 width="{{ article.image.width }}" 
                                 height="{{ article.image.height }}">
                              
                            
                            {% else %}
                                {% assign dummy_image = 'lifestyle-1' %}
                                {{ dummy_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center p-5' }}
                        {% endif %}
                </div>
            {% when 'article_content' %}
                 <div class="flex justify-center items-center">
                        <div class="max-w-7xl px-8">
                            <p>{{ article.content }}</p>
                        </div>
                    </div>
               
            
            {% when 'article_date_publish' %}
                {% if section.settings.datetime %}
                    <div class="flex justify-center items-center">
                        <div class="max-w-7xl text-center">
                            <time datetime="{{ article.published_at |date: '%Y-%m-%d' }}">{{ article.published_at | date:format: 'on_date'}}</time>
                        </div>
                    </div>
                {% endif %}
            {% when 'article_author' %}
                 <div class="flex justify-center items-center">
                        <div class="max-w-7xl text-center">
                            {% if section.settings.author %}
                                <small>{{ article.author }}</small>
                            {% endif %}
                           
                        </div>
                    </div>
    
              
            {% else %}
                
        {% endcase %}
    {% endfor %}
</article>


    

   

{% schema %}
    {
        "name": "Tempalte Article",
        "settings": [
            {
            "type": "checkbox",
            "id": "author",
            "label": "Author Name",
            "default":true
            },
            {
            "type": "checkbox",
            "label": "Show Time",
            "id": "datetime",
            "default":true
            }
        ],
        "blocks": [
            {
            "type": "article_title",
            "name":"Title",
            "limit":1
            },
             {
            "type": "article_author",
            "name":"Author Name",
            "limit":1
            },
             {
            "type": "article_date_publish",
            "name":"Publish Date",
            "limit":1
            },
             {
            "type": "article_image",
            "name":"Images",
            "limit":2
            },
             {
            "type": "article_content",
            "name":"Content",
            "limit":1
            }
        ]
    }
{% endschema %}