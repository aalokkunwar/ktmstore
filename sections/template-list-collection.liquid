<div class="flex flex-col items-center my-8">
    <h1 class="text-3xl font-medium">{{ section.settings.title }}</h1>
    <div class="max-w-6xl mx-auto my-3">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-3">

            {% for collection in collections %}
                {% if collection.all_products_count>0 %}
                    <div class="w-full py-6 px-3">
                        <div class="bg-white overflow-hidden rounded-2xl">
                            <a href="{{ collection.url }}">
                                <div class="h-72 overflow-hidden ">
                                    {% if collection.featured_image != blank %}
                                        {% assign collection_image = collection.featured_image %}
                                        {% else %}
                                        {% assign collection_image = collection.products.first.featured_image %}
                                    {% endif %}
                                    <img class="h-full w-full object-cover transition duration-1000 hover:scale-110 ease-in-out transform" src="{{ collection_image | image_url: width: 200, height: 200 }}" alt="{{ collection.title | escape }}" width="200" height="200">
                                </div>
                            </a>
                            <div class="p-4 bg-gray-100">
                                <h2 class="text-xl">{{ collection.title }}</h2>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Template List Collection",
        "settings": [
            {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default":"Collection"
            }
        ]
    }
{% endschema %}