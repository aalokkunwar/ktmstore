<div class="flex flex-col items-center my-8">
    <h1 class="text-center text-3xl">{{ section.settings.title }}</h1>
    <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-4">
            {% for product in section.settings.featured_collection.products limit: section.settings.no_product_show %}
                {% render 'product-card', products_p:product, vendorname:section.settings.verdor-name %}
                 {% else %}
                    {% for item in (1..4) %}
                        {% render 'product-card-placeholder' %}
                    {% endfor %}
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Feature Collection",
        "settings": [
            {
            "type": "text",
            "id": "title",
            "default":"Featured Collection",
            "label": "Title"
            },
            {
            "type": "collection",
            "id": "featured_collection",
            "label": "Collection"
            },
             {
            "type": "checkbox",
            "id": "verdor-name",
            "label": "Show Vendor Name",
            "default":true
            },
            {
            "type": "range",
            "min": 4,
            "max": 12,
            "step": 4,
            "id": "no_product_show",
            "label": "Numbers of Product To Show",
            "default":4
            }
        ],
        "presets": [
            {
            "name": "Featured Collection"
            }
        ]
    }
{% endschema %}