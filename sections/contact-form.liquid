<div class="flex flex-col flex-1 items-center  my-8">
    {% if section.settings.title != blank %}
        <h3 class="text-3xl text-gray-800 font-medium my-6 md:my-10">{{ section.settings.title }}</h3>
    {% endif %}
    {% form  'contact'%}
         {% if form.errors %}
                 <div class="border p-5">
                                <div class="flex flex-row items-center w-full my-3">
                                    <div class="text-red-500">
                                        {% render 'icon-error' %}
                                    </div>
                                    <div class="text-sm font-medium ml-3">
                                        Sorry! Unable Send Message
                                    </div>
                                </div>
                                <ul class="px-4 mb-3 ml-7 list-decimal">
                                     {% for error in form.errors %}
                                        <li>
                                            <span>
                                                {{ form.errors.messages[error] }}
                                            </span>
                                        </li>
                                     {% endfor %}   
                                </ul>
                            </div>
                        {% elsif form.posted_successfully? %}
                            <div class="flex flex-row items-center w-full my-3 p-5">
                                <div class="text-green-500">
                                    {% render 'icon-success' %}
                                </div>
                                <div class="text-sm font-medium ml-3">
                                    Message Sent Successfully    
                                </div>
                            </div>
                        {% endif %}
        <div class="max-w-6xl mx-auto justify-center flex items-center ">
            <div class="flex px-1 mb-3">
                <div class="px-3 md:w-1/2">
                    <label class="uppercase text-xs text-gray-500 font-medium" for="content_name">Name</label>
                    <input class="border py-3 px-4 text-gray-700 rounded-2xl w-full" type="text" name="contact[name]" id="content_name">
                </div>
                <div class="px-3 md:w-1/2">
                    <label class="uppercase text-xs text-gray-500 font-medium" for="contact_email">Email</label>
                    <input class="border py-3 px-4 text-gray-700 rounded-2xl w-full" type="email" id="contact_email" name="contact[email]">
                </div>
            </div>
        </div>

        <div class="flex px-1 mb-3">
            <div class="w-full px-3">
                <label class="uppercase text-xs text-gray-500 font-medium" for="contact_message">Message</label>
                <textarea class="border py-3 px-4 text-gray-700 rounded-2xl w-full " name="contact[body]" id="contact_message"></textarea>
            </div>
        </div>
        <div class="flex px-1 mb-3">
            <div class="w-full px-3">
                <input class="w-full cursor-pointer px-4 py-2 text-base font-medium bg-gray-700 hover:bg-gray-800 text-white rounded-2xl " type="submit" value="Subimt Message">
            </div>
        </div>
    {% endform %}    
</div>

{% schema %}
    {
        "name": "Contact Form",
        "settings": [
            {
            "type": "text",
            "id": "title",
            "label": "Title"
            }
        ],
        "presets": [
            {
            "name": "Contact Form"
            }
        ]
    }
{% endschema %}