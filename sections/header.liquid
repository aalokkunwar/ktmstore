{% assign  menu_links = linklists[section.settings.menu_links].links %}

<div class="relative bg-white/20 backdrop-blur-md  rounded-2xl top-0" x-data="{ mobileMenuOpen: false }">

  <div class="mx-auto px-4 sm:px-6">
    <div class="flex justify-between lg:justify-center items-center py-6 md:justify-start md:space-x-10">
      <!-- STORE NAME / STORE LOGO -->
      <div class="flex justify-start lg:flex-1 truncate">
        <h1 class="text-xl font-bold truncate">{{shop.name | upcase }}</h1>
      </div>

       

      <!-- NAVIGATION MENU -->

      <nav class="hidden lg:flex space-x-10">
  {% for link in menu_links %}
    {% if link.links != blank %}
      <div class="relative" x-data="{ open: false }">
        <!-- Button with hover -->
        <button 
          x-on:mouseenter="open = true" 
          x-on:mouseleave="setTimeout(() => { if (!$refs.dropdown.matches(':hover')) open = false }, 100)"
          type="button"
          class="group relative flex justify-center items-center text-base text-gray-800 hover:text-black transition-colors duration-300
                after:content-[''] after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0
                after:bg-gray-800 after:transition-all after:duration-300 hover:after:w-full {% if link.active==true %}relative text-base text-black after:w-full {% endif %}">
          {{ link.title }}
          {% render 'icon-dropdown-down' %}
        </button>

        <!-- Dropdown Menu -->
        <div 
          x-ref="dropdown"
          x-show="open"
          @mouseenter="open = true"
          @mouseleave="open = false"
          class="absolute overflow-hidden z-10 -ml-5 mt-5 transform px-2 w-screen max-w-md backdrop-blur-md sm:px-0 lg:ml-0 lg:left-1/2 lg:-translate-x-1/2"
          x-transition:enter="transition ease-out duration-200"
          x-transition:enter-start="opacity-0 -translate-y-2"
          x-transition:enter-end="opacity-100 translate-y-0"
          x-transition:leave="transition ease-in duration-150"
          x-transition:leave-start="opacity-100 translate-y-0"
          x-transition:leave-end="opacity-0 -translate-y-2">
          <div class="bg-white/20">
            <div class="shadow-lg overflow-hidden rounded-lg">
              <div class="relative grid gap-6 bg-white/40 px-5 py-6 sm:gap-8 sm:p-8">
                {% for childlink in link.links %}
                  <a href="{{ childlink.url }}" class="-m-3 p-3 flex items-start rounded-lg hover:bg-gray-100">
                    <div class="ml-4">
                      <p class="text-gray-900 text-base font-medium">
                        {{ childlink.title }}
                      </p>
                    </div>
                  </a>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
      </div>
    {% else %}
      <div class="relative">
        <a href="{{ link.url }}"
          class="relative text-base text-gray-800 hover:text-black transition-colors duration-300
          after:content-[''] after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0
          after:bg-gray-800 after:transition-all after:duration-300 hover:after:w-full {% if link.active==true %}relative text-base text-black after:w-full {% endif %}">
          {{ link.title }}
        </a>
      </div>
    {% endif %}
  {% endfor %}
</nav>

      <div class="hidden md:flex items-center justify-end md:flex-1 space-x-5">
        <a href="{{ routes.cart_url }}" class="whitespace-nowrap hidden lg:block text-base text-gray-500 hover:text-gray-900">
          {% render 'icon-shopping-bag' %}
        </a>
          {% if shop.customer_accounts_enabled == true %}
            <a href="{{ routes.account_login_url }}" class="text-base text-gray-500 hover:text-gray-900">Login</a>
            <a href="{{ routes.account_register_url }}" class="text-base text-gray-500 hover:text-gray-900">Register</a>
          {% endif %}
       
      </div>
      {% comment %} Menu button for mobile view {% endcomment %}
         <div class="-mr-2 -my-2 ml-3 flex justify-end space-x-5 items-center lg:hidden">
           <a href="{{ routes.cart_url }}" class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900">
          {% render 'icon-shopping-bag' %}
        </a>
            <button x-on:click="mobileMenuOpen = true" type="button" class=" p-2 inline-flex items-center justify-center focus:outline-none">
                {% render 'icon-menu' %}
            </button>
          </div>
  
    </div>
  </div>

  {% comment %} MOBILE MENU {% endcomment %}
   

  <div x-show="mobileMenuOpen" @click.outside="mobileMenuOpen=false"
    x-transition:enter="transition ease-out duration-500"
    x-transition:enter-start="opacity-0 rotate-180"
    x-transition:enter-end="opacity-100 rotate-0"
    x-transition:leave="transition ease-in duration-500"
    x-transition:leave-start="opacity-100 rotate-180"
    x-transition:leave-end="opacity-0 rotate-180"
    class="absolute z-10 top-0 inset-x-0 p-2 transform origin-top-left md:hidden">
    <div class="shadow-lg rounded-lg ring-5 ring-black/10 ring-opacity-5 bg-white w-full">
        <div class="p-5 divide-y-2 divide-gray-50">

            <!-- MOBILE MENU HEADER TITLE PLUS CLOSE BUTTON -->
            <div class="flex items-center justify-between pb-3">
                <div>
                    <h1 class="text-lg text-gray-500">{{section.settings.moble_menu_title}}</h1>
                </div>
                <div class="-mr-2">
                    <button x-on:click="mobileMenuOpen = false"  type="button" class="bg-white rounded-md p-2 text-gray-500">
                        {% render 'icon_close' %}
                    </button>
                </div>
            </div>

            <!-- NAVIGATION LINKS FOR MOBILE MENU -->
            <div class="pt-3">
                <nav class="grid gap-y-6">
                  {% for link in menu_links %}
                   {% assign h_link = link.handle | replace:'-','_'  %} 
                    {% if link.links != blank %}
                      <div x-data="{ {{ h_link }}:false }" class="relative">
                          <button x-on:click="{{ h_link }}=!{{ h_link }}" type="button" class="text-base text-gray-500 hover:text-gray-900 flex items-center justify-between w-full">
                              <div>{{ link.title }}</div>
                              {% render 'icon-dropdown-down' %}
                          </button>

                          <div x-show="{{ h_link }}" @click.outside=" {{ h_link }} = false" 
                            x-transition:enter="transition ease-out duration-300"
                            x-transition:enter-start="opacity-0 -translate-y-10"
                            x-transition:enter-end="opacity-100 translate-y-0"
                            x-transition:leave="transition ease-in duration-200"
                            x-transition:leave-start="opacity-100 translate-y-0"
                            x-transition:leave-end="opacity-0 -translate-y-10"
                            class="grid gap-y-6 py-3">
                        
                            {% for childlink in link.links %}
                              <a href="#" class="-m-3 p-3 mt-2 flex items-center rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-50">
                                  <span class="ml-3 text-base font-medium text-gray-500">{{ childlink.title }}</span>
                              </a>
                            {% endfor %}
                          </div>
                      </div>
                      {% else %}
                    <a href="#" class="-m-3 p-3 flex items-center rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-50">
                        {{ link.title }}
                    </a>
                    {% endif %}
                    
                  {% endfor %}

                    
                </nav>
            </div>
        </div>
    </div>
</div>
</div>

{% schema %}
  {
    "name": "Navigation Bar",
    "settings": [
        {
        "type": "text",
        "id":"moble_menu_title",
        "label":"Title",
        "default":"KTMBOOKSTORE",
        "info":"This is mobile menu"
        },
        {
        "type": "link_list",
        "id":"menu_links",
        "label": "Menus",
        "default":"main-menu"
        }
    ]
  }
{% endschema %}