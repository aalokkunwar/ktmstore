<div class="flex justify-center items-center min-h-screen bg-gray-50 px-4" x-data="{loginForm: true, recoverForm:false}">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8" x-show="loginForm">
    <h2 class="text-2xl font-bold text-gray-800 text-center">KTM STORE</h2>
    <p class="mt-2 text-sm text-gray-500 text-center">
      Please log in to your account
    </p>
    <div>
      {% form 'customer_login' %}
        {% if form.errors %}
          <div class="mt-4 p-3 bg-red-50 border border-red-200 rounded-lg text-red-600 text-sm">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}
  
        {% if form.posted_successfully? %}
          <div class="mt-4 p-3 bg-green-50 border border-green-200 rounded-lg text-green-600 text-sm">
            Login successful!
          </div>
        {% endif %}
  
        <div class="mt-6">
          <label for="CustomerEmail" class="block text-sm font-medium text-gray-700">Email address</label>
          <input
            type="email"
            name="customer[email]"
            id="CustomerEmail"
            autocomplete="email"
            class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-gray-500 sm:text-sm"
            placeholder="you@example.com"
            required
          >
        </div>
        {% if form.password_needed %}
          
          <div class="mt-4">
            <label for="CustomerPassword" class="block text-sm font-medium text-gray-700">Password</label>
            <input
              type="password"
              name="customer[password]"
              id="CustomerPassword"
              autocomplete="current-password"
              class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-gray-500 sm:text-sm"
              placeholder="••••••••"
              required
            >
          </div>
        {% endif %}
  
        <div class="flex items-center justify-between mt-4">
          <a href="#" class="text-sm text-gray-600 hover:text-gray-500 cursor-pointer" x-on:click="loginForm=false ; recoverForm=true">
            Forgot your password?
          </a>
        </div>
  
        <button
          type="submit"
          class="mt-6 w-full bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500"
        >
          Sign in
        </button>
  
        <p class="mt-6 text-center text-sm text-gray-500">
          Don’t have an account?
          <a href="{{ routes.account_register_url }}" class="text-gray-600 hover:text-gray-500 font-medium">
            Create one
          </a>
        </p>
      {% endform %}
    </div>
    {% if shop.checkout.guest_login %}
      <hr class="my-12">
      <div>
        <h2 class="mt-6 text-center text-3xl font-bold">Continue as Guest</h2>
      </div>
      {% form 'guest_login' %}
          <div>
             <button
              type="submit"
              class="mt-6 w-full bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500"
              >
              Continue
              </button>
          </div>
        {% endform %}
      {% else %}
        Guest Checkout Is not available
    {% endif %}
  </div>
{% comment %} End of login form and start of recover password form  {% endcomment %}
  <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8" x-show="recoverForm">
  <h2 class="text-2xl font-bold text-gray-800 text-center">KTM STORE</h2>
  <p class="mt-2 text-sm text-gray-500 text-center">
    Please enter your email for password recovery
  </p>

  {% form 'recover_customer_password' %}
    {% if form.errors %}
      <div class="mt-4 p-3 bg-red-50 border border-red-200 rounded-lg text-red-600 text-sm">
        {{ form.errors | default_errors }}
      </div>
    {% endif %}
   

    {% if form.posted_successfully? %}
      <div class="mt-4 p-3 bg-green-50 border border-green-200  text-green-600 text-sm rounded-lg">
        If an account exists for that email, a password reset link has been sent.
      </div>
    {% endif %}

    <div class="mt-6">
      <label for="RecoverEmail" class="block text-sm font-medium text-gray-700">Email address</label>
      <input
        type="email"
        name="email"
        id="RecoverEmail"
        autocomplete="email"
        class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-gray-500 sm:text-sm"
        placeholder="you@example.com"
        required
      >
    </div>

    <div class="flex items-center justify-between mt-4">
      <a href="#" class="text-sm text-gray-600 hover:text-gray-500" x-on:click="loginForm=true; recoverForm=false">
        Back to login
      </a>
    </div>

    <button
      type="submit"
      class="mt-6 w-full bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500"
    >
      Recover Password
    </button>

    <p class="mt-6 text-center text-sm text-gray-500">
      Don’t have an account?
      <a href="{{ routes.account_register_url }}" class="text-gray-600 hover:text-gray-500 font-medium">
        Create one
      </a>
    </p>
  {% endform %}
</div>

</div>
